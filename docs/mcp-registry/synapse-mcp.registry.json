{
  "$schema": "https://modelcontextprotocol.io/schemas/registry-manifest.json",
  "version": "1.0.0",
  "name": "synapse",
  "display_name": "Synapse AI Memory",
  "description": "Privacy-first local memory MCP server for Claude Desktop, Cursor, Windsurf, Continue, OpenClaw, and MCP clients.",
  "homepage": "https://github.com/raghuram369/synapse",
  "repository": {
    "type": "git",
    "url": "https://github.com/raghuram369/synapse.git"
  },
  "license": "MIT",
  "keywords": ["memory", "privacy", "ai", "mcp", "agents"],
  "version_range": ">=0.13.1",
  "runtime": {
    "type": "python",
    "entrypoint": {
      "command": "synapse-mcp",
      "args": ["--data-dir", "~/.synapse"]
    }
  },
  "install": {
    "linux": {
      "method": "pip",
      "command": "pip install synapse-ai-memory==0.13.1"
    },
    "darwin": {
      "method": "pip",
      "command": "pip install synapse-ai-memory==0.13.1"
    },
    "windows": {
      "method": "pip",
      "command": "python -m pip install synapse-ai-memory==0.13.1"
    }
  },
  "docs_url": "https://github.com/raghuram369/synapse/blob/main/README_MCP.md",
  "support_url": "https://github.com/raghuram369/synapse/issues"
}
